@import './mixin'
@import './common'

a
  color black
  -webkit-transition color .2s linear
  -moz-transition color .2s linear
  -o-transition color .2s linear
  -ms-transition color .2s linear
  transition color .2s linear
  
  &:hover
    color red

body
  margin 0
  padding 0
  font 1em/1em 'Helvetica Neue', Helvetica, Arial, sans-serif
  color black
  height 100%

  nav
    position relative
    top 0
    width 100%
    min-width 1024px
    font-size 1em
    min-height 50px
    max-height 50px
    text-transform uppercase
    background-color white
    color black
    
    h1
      padding 0 30px
      float left
      font-size 1em
      line-height 1.4em
      
      .smallText
        text-transform lowercase
        font-size .8em
        
      a
        text-decoration none
    
    ul
      list-style none
      line-height 1em
    
    li
      display inline-block
      padding 0 10px 0 15px
      font-size .6em
      border-left 1px solid black
      
      &:first-child
        padding-left 20px
        border-left 0px
        
      a
        text-decoration none

.clearfix 
  display inline-block
  
  &:after
    content "." 
    display block 
    height 0 
    clear both
    visibility hidden


.content
  position absolute
  width 100%
  top 30%
  padding 0 2%
  

.primary-video
  position absolute
  left 0
  width 420px
  height 236px
  z-index 1
  margin-left 4%

  &.deboss
    outer-deboss(5px)
  
.target-area
  position absolute
  width 24%
  height 40%
  border 1px solid red
  left 65%
  top 30%

video
  transition opacity 1000ms linear
  display none
  opacity 0
  
  &.display
    display block
  
  &.show
    opacity 1
  
  &.small
    z-index 2
    width 420px

.social
  position absolute
  bottom 0
  right 0
  z-index 1
  width 125px
  
  ul
    list-style-type none
    
    li
      display: inline-block
    
      img
      width 20px

#map
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 0
