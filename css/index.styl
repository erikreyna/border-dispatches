@import './mixin'
@import './common'

a
  color black
  -webkit-transition color .2s linear
  -moz-transition color .2s linear
  -o-transition color .2s linear
  -ms-transition color .2s linear
  transition color .2s linear
  
  &:hover
    color red

p
  color black

img.logo
  height 20px
  padding-right 6px


body
  width 1024px
  margin 0 auto
  padding 0
  font 100% 'Helvetica Neue', Helvetica, Arial, sans-serif
  color black
  height 100%

  nav
    position relative
    top 0
    width 100%
    font-size 1em
    min-height 50px
    text-transform uppercase
    background-color white
    color black
    z-index 2
    border-bottom-left-radius 6px
    border-bottom-right-radius 6px
    
    div
      padding 14px 30px
      float left
      font-size 1em
      line-height 1.4em
      
      .smallText
        text-transform lowercase
        font-size .8em
        
      a
        text-decoration none
    
    ul
      list-style none
      line-height 1em
    
    li
      display inline-block
      padding 0 10px 0 15px
      font-size .6em
      border-left 1px solid black
      
      &:first-child
        padding-left 20px
        border-left 0px
        
      a
        text-decoration none

.clearfix 
  display inline-block
  
  &:after
    content "." 
    display block 
    height 0 
    clear both
    visibility hidden

video
  transition opacity 1000ms linear
  display none
  opacity 0
  @outer-deboss(5px)
  pointer-events all
  
  &.display
    display block
  
  &.show
    opacity 1
  
  &.small
    z-index 2
    width 480px

.social
  position absolute
  bottom 0
  left 0
  z-index 1
  
  ul
    list-style-type none
    
    li
      display: inline-block
    
      img
      width 20px

#map, #background
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 0

#background
  background-color #505050
  opacity 0.2
  pointer-events none

.video-box
  position relative
  z-index 1
  width 50%
  height 50%

  display -webkit-box
  -webkit-box-orient horizontal
  -webkit-box-pack start
  -webkit-box-align start

  display -moz-box
  -moz-box-orient horizontal
  -moz-box-pack start
  -moz-box-align start

  display box
  box-orient horizontal
  box-pack start
  box-align start
  overflow hidden

  .vbox1
    padding 30px 3% 0
    margin-bottom -99999px
    padding-bottom 99999px

    p
      margin-bottom 30px

    &:nth-child(1)
      -moz-box-ordinal-group 1
      -webkit-box-ordinal-group 1
      box-ordinal-group 1

    &:nth-child(2)
      -moz-box-ordinal-group 2
      -webkit-box-ordinal-group 2
      box-ordinal-group 2

    &:nth-child(3)
      -moz-box-ordinal-group 3
      -webkit-box-ordinal-group 3
      box-ordinal-group 3

.flexbox
  position relative
  z-index 1
  pointer-events none
  
  display -webkit-box
  -webkit-box-orient horizontal
  -webkit-box-pack start
  -webkit-box-align start
  
  display -moz-box
  -moz-box-orient horizontal
  -moz-box-pack start
  -moz-box-align start
  
  display box
  box-orient horizontal
  box-pack start
  box-align start
  overflow hidden
  
  .col1
    width 44%
    height 50%
    padding 30px 3%
    margin-bottom -99999px
    padding-bottom 99919px
    
    p
      margin-bottom 30px
      background-color white
      padding 20px
      border-radius 7px
      
    &:nth-child(1)
      -moz-box-ordinal-group 1
      -webkit-box-ordinal-group 1
      box-ordinal-group 1
    
    &:nth-child(2)
      -moz-box-ordinal-group 2
      -webkit-box-ordinal-group 2
      box-ordinal-group 2
    
    &:nth-child(3)
      -moz-box-ordinal-group 3
      -webkit-box-ordinal-group 3
      box-ordinal-group 3
    
  .col2
    width 44%
    height 50%
    padding 10px 3%
    margin-bottom -99999px
    padding-bottom 99919px

    p
      margin-bottom 30px
      background white
      padding 20px
      border-radius 7px
      -moz-border-radius 7px
      -webkit-border-radius 7px
      font-size 0.8em
      -moz-border-radius 7px
      -webkit-border-radius 7px
      text-align justify
      width 97%
      position relative
      top -12px
      height 68%


    &:nth-child(1)
      -moz-box-ordinal-group 1
      -webkit-box-ordinal-group 1
      box-ordinal-group 1

    &:nth-child(2)
      -moz-box-ordinal-group 2
      -webkit-box-ordinal-group 2
      box-ordinal-group 2

    &:nth-child(3)
      -moz-box-ordinal-group 3
      -webkit-box-ordinal-group 3
      box-ordinal-group 3

.photos
  background-color white
  padding 10px 8px 10px 10px 
  -moz-border-radius 2px
  -webkit-border-radius 2px
  border-radius 2px
  
  img
    width 49%
    
.navigate
  border 1px solid #505050
  border-radius 10px
  box-sizing border-box
  box-shadow inset 2px 2px 4px #505050, inset -2px -2px 4px #505050
  height 80%
  pointer-events none
  background-color #FAFAFA
  opacity 0.2


.marker
  position fixed
  width 10px
  height 10px
  border-radius 5px
  background-color red
