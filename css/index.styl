@import './mixin'
@import './common'
@import './video'

@import './loc_nav'

a
  color black
  -webkit-transition color .2s linear
  -moz-transition color .2s linear
  -o-transition color .2s linear
  -ms-transition color .2s linear
  transition color .2s linear
  
  &:hover
    color red

body
  margin 0
  padding 0
  font .7em/1em 'Helvetica Neue', Helvetica, Arial, sans-serif
  
  color black
  height 100%
  
  #map
    position absolute
    top 0
    bottom 0
    width 100%
    z-index 0
  
  .content
    position relative
    z-index 1
    width 100%
    height 100%

    nav
      position relative
      top 0
      width 100%
      min-width 1024px
      min-height 6%
      text-transform uppercase
      background-color white
      color black
      padding 0 10%
      
      h1
        padding-left 1%
        float left
        
        .smallText
          text-transform lowercase
          
        a
          text-decoration none
      
      ul
        list-style none
        line-height 1.5em
      
      li
        display inline-block
        padding 0 1%
        
        &:first-child
          padding-left 5%
        a
          text-decoration none

.clearfix 
  display inline-block
  
  &:after
    content "." 
    display block 
    height 0 
    clear both
    visibility hidden
