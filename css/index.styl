@import './mixin'
@import './common'

@import './loc_nav'

a
  color black
  -webkit-transition color .2s linear
  -moz-transition color .2s linear
  -o-transition color .2s linear
  -ms-transition color .2s linear
  transition color .2s linear
  
  &:hover
    color red

body
  margin 0
  padding 0
  font 1em/1em 'Helvetica Neue', Helvetica, Arial, sans-serif
  color black
  height 100%

  nav
    position relative
    top 0
    width 100%
    min-width 1024px
    font-size 1em
    min-height 50px
    max-height 50px
    text-transform uppercase
    background-color white
    color black
    
    h1
      padding 0 30px
      float left
      font-size 1em
      line-height 1.4em
      
      .smallText
        text-transform lowercase
        font-size .8em
        
      a
        text-decoration none
    
    ul
      list-style none
      line-height 1em
    
    li
      display inline-block
      padding 0 10px 0 15px
      font-size .6em
      border-left 1px solid black
      
      &:first-child
        padding-left 20px
        border-left 0px
        
      a
        text-decoration none
    
    .media
      position relative
      width 100%
      height 94%
      
      .background
        position absolute
        top 0
        left 0
        z-index 0
        width 100%
        height 100%
        background-color transparent
        transition all 3000ms
        
        &.initial
          background-color black
          
      .column
        position absolute
        z-index 1
        width 100%
        transition all 2500ms
        
        &.half
          width 50%
          padding-top 10%
        
        video.primary
          display block
          margin 0 auto
          height 100%
          transition all 2500ms
          
          &.small
            height 320px

.clearfix 
  display inline-block
  
  &:after
    content "." 
    display block 
    height 0 
    clear both
    visibility hidden


.target-area
  position absolute
  width 24%
  height 40%
  border 1px solid red
  left 65%
  top 30%

.mainVid
  position absolute
  top 80px
  left 30px
  z-index 3
  width 420px
  height 236px

.social
  position absolute
  bottom 0
  right 0
  z-index 1
  width 125px
  
  ul
    list-style-type none
    
    li
      display: inline-block
    
      img
      width 20px

#map, #map-preload
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 0

#map-preload
  display none