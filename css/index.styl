@import './mixin'
@import './common'

a
  color black
  -webkit-transition color .2s linear
  -moz-transition color .2s linear
  -o-transition color .2s linear
  -ms-transition color .2s linear
  transition color .2s linear
  
  &:hover
    color red

p
  color black

body
  margin 0
  padding 0
  font 100% 'Helvetica Neue', Helvetica, Arial, sans-serif
  color black
  height 100%

  nav
    position relative
    top 0
    width 100%
    min-width 1024px
    font-size 1em
    min-height 50px
    max-height 50px
    text-transform uppercase
    background-color white
    color black
    z-index 2
    
    h1
      padding 0 30px
      float left
      font-size 1em
      line-height 1.4em
      
      .smallText
        text-transform lowercase
        font-size .8em
        
      a
        text-decoration none
    
    ul
      list-style none
      line-height 1em
    
    li
      display inline-block
      padding 0 10px 0 15px
      font-size .6em
      border-left 1px solid black
      
      &:first-child
        padding-left 20px
        border-left 0px
        
      a
        text-decoration none

.clearfix 
  display inline-block
  
  &:after
    content "." 
    display block 
    height 0 
    clear both
    visibility hidden

.primary-video

  &.deboss
    outer-deboss(5px)

video
  transition opacity 1000ms linear
  display none
  opacity 0
  
  &.display
    display block
  
  &.show
    opacity 1
  
  &.small
    z-index 2
    width 92%

.social
  position absolute
  bottom 0
  right 0
  z-index 1
  width 125px
  
  ul
    list-style-type none
    
    li
      display: inline-block
    
      img
      width 20px

#map
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 0
  

.video-box
  position relative
  z-index 1
  width 50%
  height 50%

  display -webkit-box
  -webkit-box-orient horizontal
  -webkit-box-pack start
  -webkit-box-align start

  display -moz-box
  -moz-box-orient horizontal
  -moz-box-pack start
  -moz-box-align start

  display box
  box-orient horizontal
  box-pack start
  box-align start
  overflow hidden

  .vbox1
    padding 30px 3% 0
    margin-bottom -99999px
    padding-bottom 99999px

    p
      margin-bottom 30px

    &:nth-child(1)
      -moz-box-ordinal-group 1
      -webkit-box-ordinal-group 1
      box-ordinal-group 1

    &:nth-child(2)
      -moz-box-ordinal-group 2
      -webkit-box-ordinal-group 2
      box-ordinal-group 2

    &:nth-child(3)
      -moz-box-ordinal-group 3
      -webkit-box-ordinal-group 3
      box-ordinal-group 3

.flexbox
  position relative
  z-index 1
  
  display -webkit-box
  -webkit-box-orient horizontal
  -webkit-box-pack start
  -webkit-box-align start
  
  display -moz-box
  -moz-box-orient horizontal
  -moz-box-pack start
  -moz-box-align start
  
  display box
  box-orient horizontal
  box-pack start
  box-align start
  overflow hidden
  
